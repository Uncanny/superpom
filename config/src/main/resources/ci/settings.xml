<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
	<servers>
		<server>
			<id>ossrh</id>
			<username>${env.CI_DEPLOY_USERNAME}</username>
			<password>${env.CI_DEPLOY_PASSWORD}</password>
		</server>
	</servers>
	<profiles>
		<profile>
			<id>uncanny-release</id>
			<properties>
				<gpg.executable>gpg</gpg.executable>
				<gpg.defaultKeyring>false</gpg.defaultKeyring>
				<gpg.keyname>${env.KEYNAME}</gpg.keyname>
				<gpg.passphrase>${env.PASSPHRASE}</gpg.passphrase>
				<gpg.useagent>false</gpg.useagent>
				<gpg.publicKeyring>uncanny.pubring.gpg</gpg.publicKeyring>
				<gpg.secretKeyring>uncanny.secring.gpg</gpg.secretKeyring>
			</properties>
		</profile>
		<profile>
			<id>sonar</id>
			<activation>
				<property>
					<name>sonar.branch</name>
				</property>
			</activation>
			<properties>
				<sonar.host.url>${env.SONARQUBE_INSTANCE}</sonar.host.url>
				<sonar.login>${env.SONARQUBE_LOGIN}</sonar.login>
				<sonar.password>${env.SONARQUBE_PASSWORD}</sonar.password>
				<sonar.branch>${env.TRAVIS_BRANCH}</sonar.branch>
			</properties>
		</profile>
	</profiles>
</settings>